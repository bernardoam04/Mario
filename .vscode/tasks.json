{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "${workspaceFolder}/códigos/main.cpp",
                "${workspaceFolder}/códigos/GerenciadorGeral.cpp",
                "${workspaceFolder}/códigos/Mapa.cpp",
                "${workspaceFolder}/códigos/PoderesEspeciais.cpp",
                "${workspaceFolder}/códigos/Camera.cpp",
                "${workspaceFolder}/códigos/Colisao.cpp",
                "-o",
                "${workspaceFolder}/app.exe",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "${workspaceFolder}/códigos/tinyxml2.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
